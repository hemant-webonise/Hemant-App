<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:textSize="@dimen/text"
        android:id="@+id/tvLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textColor="@drawable/list_item_text_selector"

        android:ellipsize="end"
        android:layout_alignTop="@+id/btnImage"
        android:layout_toRightOf="@+id/btnImage"
        android:layout_toLeftOf="@+id/deletor"
        android:layout_toStartOf="@+id/deletor" />

    <ImageButton
        android:id="@+id/deletor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:src="@drawable/delete"
        android:background="@null"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp"
        android:layout_alignTop="@+id/tvLocation"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textSize="@dimen/abc_text_size_small_material"
        android:textColor="@color/primary"
        android:layout_below="@+id/tvLocation"
        android:layout_toRightOf="@+id/btnImage"
        android:layout_toEndOf="@+id/btnImage" />
    <ImageButton
        android:id="@+id/btnImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/pick"
        android:layout_margin="@dimen/margin_registration"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



</RelativeLayout>
