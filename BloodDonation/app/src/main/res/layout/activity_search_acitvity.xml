<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.webonise.blooddonation.SearchActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

       >

     <!--   android:background="@drawable/home"-->
        <Button
            android:id="@+id/btnHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Record a location."
            android:background="@drawable/fabrect"
            android:alpha="0.9"
            android:textColor="@color/icons"
            android:textSize="30dp"
            android:textAllCaps="false"
            style="@style/Base.TextAppearance.AppCompat"
            android:padding="@dimen/padding_button"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="46dp" />
        <!--
        Code update to make the the caps in the button to be disabled
            android:textAllCaps="false"
            style="@style/Base.TextAppearance.AppCompat"-->

        <Button
            android:padding="@dimen/padding_button"
            android:id="@+id/btnSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="Need a donor ?"
            android:gravity="center"
            android:textAllCaps="false"
            style="@style/Base.TextAppearance.AppCompat"
            android:background="@drawable/fabrect"
            android:alpha="0.9"
            android:textColor="@color/icons"
            android:layout_marginBottom="30dp"
            android:layout_above="@id/btnHistory"
            android:layout_alignLeft="@+id/btnHistory"
            android:layout_alignStart="@+id/btnHistory"
            android:layout_alignRight="@+id/btnHistory"
            android:layout_alignEnd="@+id/btnHistory" />


    </RelativeLayout>


</LinearLayout>
